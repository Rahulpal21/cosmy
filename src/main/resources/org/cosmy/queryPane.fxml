<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <SplitPane fx:id="querySplitPane" dividerPositions="0.5" layoutX="-1.0" layoutY="1.0" orientation="VERTICAL">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" >
               <children>
                  <VBox >
                     <children>
                        <HBox prefHeight="40.0" prefWidth="200.0">
                           <children>
                              <Label accessibleText="Query Pane" text="Query Pane" />
                              <Label text="Running Status..." />
                           </children>
                        </HBox>
                        <ScrollPane>
                          <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0">
                                 <children>
                                    <TextArea fx:id="queryTextArea"/>
                                 </children>
                              </AnchorPane>
                          </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <VBox>
                     <children>
                        <HBox prefHeight="40">
                           <children>
                              <Label text="Results" HBox.hgrow="NEVER" />
                              <ToolBar prefHeight="40.0" HBox.hgrow="NEVER">
                                <items>
                                    <ToggleButton mnemonicParsing="false" text="Collapse" />
                                    <ToggleButton mnemonicParsing="false" text="Wrap" />
                                    <ToggleButton mnemonicParsing="false" text="Json" />
                                </items>
                              </ToolBar>
                           </children>
                        </HBox>
                        <ScrollPane>
                          <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0">
                                 <children>
                                    <TextArea fx:id="resultsPane"/>
                                 </children>
                              </AnchorPane>
                          </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
